{
  "eras": [
    {
      "id": "jomon_soso",
      "name": "草創期",
      "western": "BC16500～BC10000",
      "japanese": "縄文草創期",
      "events": [
        {
          "year": "BC16500",
          "keyword": "最古の土器",
          "description": "青森県の大平山元I遺跡で日本最古の土器が出土。煮炊きが可能。",
          "region": "日本",
          "theme": "土器"
        },
        {
          "year": "BC14000",
          "keyword": "温暖化",
          "description": "完新世の温暖化開始。落葉広葉樹の森が日本列島に広がる。",
          "region": "日本",
          "theme": "環境"
        },
        {
          "year": "BC12500",
          "keyword": "ナトゥーフ文化",
          "description": "西アジアでナトゥーフ文化が定住開始。穀物収穫用の石鎌が出土。",
          "region": "ユーラシア",
          "theme": "定住"
        },
        {
          "year": "BC15000",
          "keyword": "ホアビニアン文化",
          "description": "東南アジア（タイ、ラオス）で狩猟採集民が暮らす。縄文人の祖先とされる（NHK, 2023）。",
          "region": "東南アジア",
          "theme": "移住"
        },
        {
          "year": "BC15000",
          "keyword": "ホアビニアンDNA",
          "description": "ホアビニアンのゲノム解析で縄文人との遺伝的つながり確認（NHK, 2023）。",
          "region": "東南アジア",
          "theme": "DNA"
        },
        {
          "year": "BC13000",
          "keyword": "クローヴィス文化",
          "description": "北アメリカで大型動物を狩る狩猟採集民。尖頭器を使用。",
          "region": "北米",
          "theme": "狩猟"
        }
      ]
    },
    {
